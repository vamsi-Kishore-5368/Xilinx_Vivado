module Decoder_tb;
reg [1:0] i; 
wire [3:0] y;
Decoder E1(.i(i),.y(y)); 
initial
begin
i=2'b00;
#10 i=2'b01;
#10 i=2'b10;
#10 i=2'b11;
#10 $stop;
end
endmodule
